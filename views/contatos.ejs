<h1>Contatos</h1>
<hr>


<a href="/formContato" ><button type="button" class="btn btn-primary btn-lg btn-block">Incluir</button></a>

<table>
    <tr>
        <td>Id</td>
        <td>Nome</td>
        <td>E-mail</td>
        <td>Telefone</td>
        <td>Rede Social</td>
    </tr>
    <% contato.forEach(function(item){ %>
    <tr>
        <td><%= item.id %></td>
        <td><%= item.nome %></td>
        <td><%= item.email %></td>
        <td><%= item.telefone %></td>
        <td><%= item.rede_social %></td>
        <td>
            <a href="/atualizarContato?id=<%= item.id %>"><button type="button" class="btn btn-primary btn-lg btn-block">Atualizar</button></a>
        </td>
        <td>
            <a href="/excluirContato?id=<%= item.id %>" onClick="return confirm('Confirma a exclusÃ£o?')"><button type="button" class="btn btn-primary btn-lg btn-block">Excluir</button></a>
        </td>
    </tr>
    <% }) %>
</table>

